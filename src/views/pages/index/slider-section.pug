-
  const leftArrowImage = {
    name: 'icon-angle-left',
    alt: 'Icon angle left',
    type: 'icons',
    extension: 'svg'
  }

- const sliderImages = ['image-hero-1', 'image-hero-2', 'image-hero-3']

section.section.section--slider
  ul.slider
    each sliderImage in sliderImages
      li.slider__image-container
        picture
          source(srcset=`assets/images/desktop-${sliderImage}.jpg` media="(min-width: 1440px)")
          img(src=`assets/images/mobile-${sliderImage}.jpg`)
  .content
    h2#dynamic-title.title.title--h2 Discover innovative ways to decorete
    p#dynamic-paragraph.paragraph.
      We provide unmatched quality, comfort, and style for property owners
      across the country. Our experts combine form and function in bringing
      your vision to life. Create a room in your own style with our collection and
      make your property a reflection of you and what you love.
    a.link(href="#") Shop now
  .slider-arrows
    span.icon-container.slider-arrows__icon-container
      +image(leftArrowImage)
    span.icon-container.slider-arrows__icon-container
      +image({ name: 'icon-angle-right', alt: 'Icon angle right', type: 'icons', extension: 'svg' })
